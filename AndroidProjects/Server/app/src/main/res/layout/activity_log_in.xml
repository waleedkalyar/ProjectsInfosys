<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6ca4eadd"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.waleedkalyar.serverapplicationtest.LogInActivity">



        <EditText
            android:id="@+id/edt_txt_login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="E-Mail"
            android:textColor="#6877ec" />



        <EditText
            android:id="@+id/edt_txt_login_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#6877ec" />


    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dummy_button_style"
        android:text="LOg in"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtView_goto_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:clickable="true"
        android:onClick="textClickResponce"
        android:text="If you are not registered user click here"
        android:textColor="#100539"
        android:textSize="15dp"
        android:textStyle="bold" />
</LinearLayout>
