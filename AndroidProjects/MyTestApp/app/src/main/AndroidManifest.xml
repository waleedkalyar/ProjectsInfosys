<?xml version="1.0" encoding="utf-8"?><!-- what is meant by below line "http://schema....." -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.waleedkalyar.mytestapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LstVuForCustomDesign">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <!-- what is different between action and catagory??? -->
                <category android:name="android.intent.category.LAUNCHER" />
                <!-- launcher is an activity that shows as first page when application starts! -->
            </intent-filter>
        </activity>
        <activity android:name=".Main2Activity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".ListViewActivityWithCustomDesign" />
        <activity android:name=".SpinnerActivity"></activity>
    </application>

</manifest>