<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.waleedkalyar.animationpractise.MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:onClick="scaleImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="scale" />
    <Button
        android:onClick="rotateImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rotate" />
    <Button
        android:onClick="alphaImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="alpha" />
    <Button
        android:onClick="translateImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="translate" />
</LinearLayout>
    <ImageView
        android:id="@+id/imgvu_test"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@mipmap/ic_launcher"/>
</LinearLayout>
