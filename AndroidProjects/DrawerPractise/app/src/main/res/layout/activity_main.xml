<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#6d7ad9">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:weightSum="3"
            android:background="@drawable/bg_card">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="  Email adress"
    android:inputType="textEmailAddress"
    android:id="@+id/login_email"
    android:drawableStart="@drawable/email_practise"
    android:textColor="#FFF"
    android:textColorHint="#FFF"
    android:layout_gravity="center"
    />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="  Password"
                android:inputType="textPassword"
                android:id="@+id/login_pass"
                android:drawableStart="@drawable/lock_password"
                android:textColor="#FFF"
                android:textColorHint="#FFF"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardElevation="20dp"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="sign in"
                    android:textColor="#FFF"
                    android:id="@+id/btn_login"
                    android:textAllCaps="false"
                    android:background="@drawable/custom_btn_design_signin"/>
            </android.support.v7.widget.CardView>
            <!--<Button-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="sign in"-->
                <!--android:textColor="#FFF"-->
                <!--android:textAllCaps="false"-->
                <!--android:background="@drawable/btn_custom_shape"/>-->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="20dp"
                app:cardCornerRadius="5dp"
                android:background="@drawable/btn_custom_shape_byme"
                android:layout_marginTop="10dp"
                >
                <Button
                    android:id="@+id/btn_login_with_fb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:text="sign in with facebook"
                    android:textAllCaps="false"
                    android:background="@drawable/btn_custom_shape_byme"/>
            </android.support.v7.widget.CardView>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Forgot your Password?"
    android:textColor="#FFF"
    android:layout_gravity="bottom|center"
    android:paddingTop="5dp"/>




            </LinearLayout>

        </LinearLayout>


</LinearLayout>
